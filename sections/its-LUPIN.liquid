<section class="lupin-section page-width">
    <div class="Lupin-box">
        <div class="heading-area">
            <p class="section-subHeading rawsonBold yellow uppercase text-center lt">{{section.settings.subHeading}}</p>
            <h2 class="section-heading text-center recoletaRegular offwhite">{{section.settings.heading}}</h2>
        </div>
        <div class="image-with-conten">
            <img  class="lupin-img"src="{{section.settings.image | img_url: 'master'}}" alt="">
            <h3 class="heading white recoletaRegular offwhite">{{section.settings.inner-heading}}</h3>
            <p class="heading offwhite">{{section.settings.inner-content}}</p>
        </div>

        <div class="lupin-slider">
            {%- for block in section.blocks -%}
            <div class="lupin-block">
                <div class="lupin-block-image"> {{block.settings.svg_image}}</div>
                <p class="lupin-content rawson offwhite"> {{block.settings.text}}
            </div>
            {%- endfor -%}
        </div>
       <div class="btn-box">
 <a href="https://chefskiss.myshopify.com/collections/all" class="button custom-btn">SEE OUR PRODUCTS</a>
  </div>
    </div>
</section>
     <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  
<script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
<script>
$('.lupin-slider').slick({
  dots: true,
  infinite: false,
  arrows: false,
  speed: 300,
  slidesToShow: 6,
  slidesToScroll: 6,
  responsive: [
    {
      breakpoint: 1024,
      settings: {
        slidesToShow: 6,
        slidesToScroll: 6,
        infinite: true,
        dots: true
      }
    },
    {
      breakpoint: 600,
      settings: {
        slidesToShow: 1,
        slidesToScroll: 1
      }
    },
    {
      breakpoint: 480,
      settings: {
        slidesToShow: 1,
        slidesToScroll: 1
      }
    }
    // You can unslick at a given breakpoint now by adding:
    // settings: "unslick"
    // instead of a settings object
  ]
});
</script>
<style>
  .secton-its-lupin{
    background:{{section.settings.bg-color}};
      padding:{{section.settings.padding}}px 0;
  
  }
  @media screen and (min-width: 750px) {
  .Lupin-box .heading-area p{
  	font-size:{{section.settings.subheading_font_size}};
  }
  .Lupin-box .heading-area h2{
  	font-size:{{section.settings.heading_font_size}};
  }
    .Lupin-box .image-with-conten h3{
      font-size:{{section.settings.inner_heading_font_size}};
    }
    .Lupin-box .image-with-conten p{
    	font-size:{{section.settings.inner_content_font_size}};
    }
    .Lupin-box .lupin-slider .lupin-block p{
    	font-size:{{section.settings.block_content_font_size}};
    }
    .lupin-block svg path{
    	transition: all .3s;
    }
    .lupin-block:hover svg path {
    fill: #DBA036;
}
  }
   @media screen and (max-width: 749px) {
  .Lupin-box .heading-area p{
  	font-size:{{section.settings.mtitle_font}};
  }
  .Lupin-box .heading-area h2{
  	font-size:{{section.settings.mtitle_font}};
  }
     .Lupin-box .image-with-conten h3{
      font-size:{{section.settings.minner_heading_font_size}};
    }
    .Lupin-box .image-with-conten p{
    	font-size:{{section.settings.minner_content_font_size}};
    }
     .Lupin-box .lupin-slider .lupin-block p{
    	font-size:{{section.settings.mblock_content_font_size}};
    }
     .lupin-block.slick-active svg path{
     	fill: #DBA036;
     }
  }
</style>


