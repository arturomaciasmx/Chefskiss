<section class="ingredients page-width">
    <h2 class="section-heading text-center recoletaRegular">{{section.settings.heading}}</h2>
    <div class="ingredients-content">
        
{%- for block in section.blocks -%}
    <div class="single-ingredietns-item item-{{forloop.index}}">
      <div class="icon-{{forloop.index}}">
        <div class="csicon plus-icon white " ><i class="fas fa-plus"></i></div>
        <div class="csicon minus-icon white " ><i class="fas fa-minus"></i></div>
      </div>
      <div class="ingredient-imgBox"><img class="ingredients-img" src="{{ block.settings.image | img_url: 'master'}}" alt=""></div>
     <h3 class="item-text text-center black recoletaRegular">{{ block.settings.text}}</h3>
     <div class="ingredients-text-box textbox-{{forloop.index}}">
         <h3 class="heading yellow recoletaRegular"> {{ block.settings.ingredient_heading}}</h3>
         <p class="ingredientsContent offwhite rawsonLight">{{ block.settings.ingredient_des}}</p>
     </div>
    
    
    </div>
{%- endfor -%}
</div>
</section>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script>

$(document).ready(function(){
$(".icon-1").click(function(){
  $(".textbox-1").toggle();
  $(".textbox-2").hide();
  $(".textbox-3").hide();
  $(".item-1").toggleClass("show");
  $(".item-2").removeClass("show");
   $(".item-3").removeClass("show");
});
  $(".icon-2").click(function(){
  $(".textbox-2").toggle();
    $(".textbox-1").hide();
  $(".textbox-3").hide();
    $(".item-2").toggleClass("show");
     $(".item-3").removeClass("show");
     $(".item-1").removeClass("show");
    
});
  $(".icon-3").click(function(){
  $(".textbox-3").toggle();
    $(".textbox-1").hide();
  $(".textbox-2").hide();
    $(".item-3").toggleClass("show");
    $(".item-1").removeClass("show");
  $(".item-2").removeClass("show");
})
});
</script>
<style>
  .secton-ingredients{
    background:{{section.settings.bg-color}};
      padding:{{section.settings.padding}}px 0;
  
  }
  
</style>




{% schema %}
 {
  "name": "Ingredients",
  "tag": "section",
"class": "secton-ingredients",
  "settings": [
  {
    "type": "text",
    "id": "heading",
    "label": "Section Heading"
  },{
"type": "color",
"id": "bg-color",
"label": "Section Background"
},
{
"type": "range",
"id": "padding",
"min": 0,
"max": 250,
"step": 5,
"default": 50,
"unit": "px",
"label": "Section padding"
}
  
  ],
  "blocks": [
    {
      "type": "Ingredients",
      "name": "Ingredients",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Item Image"
        },
		{
          "type": "textarea",
          "id": "text",
          "label": "Item Text"
        },
		{
          "type": "textarea",
          "id": "ingredient_heading",
          "label": "ingredient Heading"
        },
		{
          "type": "textarea",
          "id": "ingredient_des",
          "label": "ingredient Description"
        }
      ]
    }
  ],
 "presets": [
    {
      "name": "Ingredients",
      "blocks": [
       
       
      ]
    }
  ]
}

{% endschema %}
