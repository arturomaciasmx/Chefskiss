<style>
  #shopify-section-{{ section.id }} {
    background-image: url({{ section.settings.background_desktop | image_url: width: full}});
    background: {{ section.settings.background }};
    background-size: cover;
    padding-top: {{ section.settings.space_top }}px;
    padding-bottom: {{ section.settings.space_bottom }}px;
    background-position: center;
  }
  #shopify-section-{{ section.id }} .two-columns {
    display: flex;
    max-width: 1100px;
    margin: auto;
    {%- if section.settings.center_content -%}
      align-items: center;
    {%- endif -%}
    {% if section.settings.reverse %}
      flex-direction: row-reverse;
    {% endif %}
  }
  #shopify-section-{{ section.id }} .two-columns div {
    width: 50%;
    padding: 10px;
  }
  #shopify-section-{{ section.id }} .two-columns .content {}
  #shopify-section-{{ section.id }} .two-columns .content-img img {
    width: {{ section.settings.content_image_size }}%;
    {% if section.settings.multiply %}
      mix-blend-mode: multiply;
    {% endif %}

  }
  @media screen and (max-width: 750px) {
    #shopify-section-{{ section.id }} {
      background-image: url({{ section.settings.background_mobile | image_url: width: full}});
      {{ section.settings.mobile_css }}
    }
    #shopify-section-{{ section.id }} .two-columns {
      flex-wrap: wrap;
      gap: 50px;
    }
    #shopify-section-{{ section.id }} .two-columns div {
      width: 100%;
      text-align: center;
    }
    #shopify-section-{{ section.id }} .two-columns a {
      margin: auto;
    }
  }
</style>
<div class="two-columns {{ section.settings.class }}">
  <div class="content">
    <h2 class="recoletaRegular  h1">{{ section.settings.heading }}</h2>
    <p class="rawson" style="margin-top: 20px;margin-bottom: 50px;">{{ section.settings.text }}</p>
    <a class="custom-btn rawsonBold" href="{{ section.settings.button_link }}">{{ section.settings.cta }}</a>
  </div>
  <div class="content-img">
    {% if section.settings.content_image %}
      <img src="{{section.settings.content_image | image_url: width: x600}}">
    {% endif %}
  </div>
</div>
{% schema %}
{
  "name": "Two Columns",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "cta",
      "label": "CTA",
      "default": "LEARN MORE"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "image_picker",
      "id": "background_desktop",
      "label": "Background Desktop"
    },
    {
      "type": "image_picker",
      "id": "background_mobile",
      "label": "Background Mobile"
    },
    {
      "type": "number",
      "id": "space_top",
      "label": "Space Top",
      "default": 50
    },
    {
      "type": "number",
      "id": "space_bottom",
      "label": "Space Bottom",
      "default": 50
    },
    {
      "type": "image_picker",
      "id": "content_image",
      "label": "Content Image"
    },
    {
      "type": "number",
      "id": "content_image_size",
      "label": "Content Image Size",
      "default": 100
    },
    {
      "type": "checkbox",
      "id": "multiply",
      "label": "Add Multiply Effect",
      "default": true
    },
    {
      "type": "color_background",
      "id": "background",
      "label": "Background",
      "default": "linear-gradient(#ffffff, #000000)"
    },
    {
      "type": "checkbox",
      "id": "reverse",
      "label": "Reverse Columns",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "center_content",
      "label": "Center Content",
      "default": false
    },
    {
      "type": "text",
      "id": "class",
      "label": "CSS Class"
    },
    {
      "type": "textarea",
      "id": "mobile_css",
      "label": "Custom css mobile"
    }
  ],
  "presets": [
    {
      "name": "Two Columns"
    }
  ]
}
{% endschema %}
