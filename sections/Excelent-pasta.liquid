{%-liquid
  assign background = section.settings.background
  assign top_space = section.settings.top-space
  assign bottom_space = section.settings.bottom-space
-%}
{%- for block in section.blocks -%}
  {%- case block.type -%}
    {%- when 'announcement' -%}
      <div class="announcement-bar excelent-pasta" role="region" aria-label="{{ 'sections.header.announcement' | t }}" {{ block.shopify_attributes }}>
        {%- if block.settings.text != blank -%}
          {%- if block.settings.link != blank -%}
            <a href="{{ block.settings.link }}" class="announcement-bar__link link link--text focus-inset animate-arrow">
          {%- endif -%}
              <h2 class="announcement-bar__message recoletaRegular  yellow ">
                {{ block.settings.text | escape }}
                {%- if block.settings.link != blank -%}
                  {% render 'icon-arrow' %}
                {%- endif -%}
              </h2>
          {%- if block.settings.link != blank -%}
            </a>
          {%- endif -%}
        {%- endif -%}
      </div>
  {%- endcase -%}
{%- endfor -%}

<style>
#shopify-section-{{ section.id }} {
  background: {{ background }};
  padding-top: {{ top_space }};
  padding-bottom: {{ bottom_space }};
}
</style>


{% schema %}
 {
  "name": "Exelent Pasta",
  "tag": "section",
  "class": "spaced-section spaced-section--full-width",
  "settings": [
      {
        "type": "color",
        "id": "background",
        "label": "Background",
        "default": "#928B80"
      },
      {
        "type": "text",
        "id": "top-space",
        "label": "Top Space",
        "default": "30px"
      },
      {
        "type": "text",
        "id": "bottom-space",
        "label": "Bottom Space",
        "default": "30px"
      }
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "t:sections.announcement-bar.blocks.announcement.name",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "default": "Welcome to our store",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.text.label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.link.label"
        }
      ]
    }
  ],
 "presets": [
    {
      "name": "Excelent-Pasta",
      "blocks": [
       
       
      ]
    }
  ]
}

{% endschema %}
